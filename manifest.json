{
  "manifest_version": 3,
  "name": "NovelAI Auto Generator",
  "version": "0.1.0",
  "description": "NovelAIのWeb UIを自動化し、事前定義されたプロンプトで複数の画像を生成・保存するChrome拡張機能",

  "permissions": ["activeTab", "scripting", "downloads", "storage", "tabs"],

  "host_permissions": ["https://novelai.net/*"],

  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://novelai.net/*"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "NovelAI Auto Generator"
  },

  "web_accessible_resources": [
    {
      "resources": ["config/prompts.json"],
      "matches": ["https://novelai.net/*"]
    }
  ],

  "minimum_chrome_version": "96"
}
