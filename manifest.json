{
  "manifest_version": 3,
  "name": "NovelAI Auto Generator Enhanced",
  "version": "1.0.1",
  "description": "NovelAI画像生成自動化拡張機能 - 新しいダウンロードシステム搭載版",
  "permissions": ["storage", "tabs", "downloads", "webRequest"],
  "host_permissions": ["https://novelai.net/*", "https://*.novelai.net/*"],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://novelai.net/*", "https://*.novelai.net/*"],
      "js": ["dist/content.enhanced.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "NovelAI Auto Generator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "config/prompts.json",
        "config/samplers.json",
        "config/dom-selectors.json",
        "config/*"
      ],
      "matches": ["https://novelai.net/*", "https://*.novelai.net/*"]
    }
  ],
  "minimum_chrome_version": "96"
}
