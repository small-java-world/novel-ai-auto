{
  "manifest_version": 3,
  "name": "NovelAI Auto Generator",
  "description": "Automate NovelAI image generation with predefined prompts.",
  "version": "1.0.1",
  "permissions": ["storage", "downloads", "tabs", "scripting"],
  "host_permissions": ["https://novelai.net/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://novelai.net/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "NovelAI Auto Generator",
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "config/prompts.json"
      ],
      "matches": ["https://novelai.net/*"]
    }
  ]
}
