{
  "name": "novelai-auto-generator",
  "version": "1.0.0",
  "description": "Chrome extension for automating NovelAI image generation with prompt synthesis and metadata management",
  "type": "module",
  "scripts": {
    "build": "tsc --project tsconfig.build.json && node scripts/fix-dist-imports.cjs && node scripts/bundle-content.cjs",
    "build:prod": "tsc --sourceMap false",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --reporter=verbose",
    "test:e2e": "playwright test",
    "test:e2e:basic": "playwright test basic-flow.spec.ts",
    "test:e2e:error": "playwright test error-handling.spec.ts",
    "test:e2e:performance": "playwright test performance.spec.ts",
    "test:e2e:integration": "playwright test integration.spec.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "playwright:install": "playwright install chromium",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"test/**/*.{ts,js,json}\" \"*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"test/**/*.{ts,js,json}\" \"*.{ts,js,json}\"",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "precommit": "lint-staged && npm run test:unit",
    "prepush": "npm run test:coverage && npm run build",
    "release": "npm run test:coverage && npm run build:prod",
    "audit": "npm audit --audit-level=moderate",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "esbuild": "^0.25.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "happy-dom": "^14.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.7",
    "typescript": "~5.5.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "chrome-extension",
    "novelai",
    "automation",
    "image-generation",
    "prompt-synthesis",
    "metadata-management",
    "ai-art",
    "batch-processing"
  ],
  "author": "NovelAI Auto Generator Team",
  "homepage": "https://github.com/small-java-world/novel-ai-auto",
  "repository": {
    "type": "git",
    "url": "https://github.com/small-java-world/novel-ai-auto.git"
  },
  "bugs": {
    "url": "https://github.com/small-java-world/novel-ai-auto/issues"
  },
  "license": "MIT"
}
